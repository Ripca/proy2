<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    
    <display-name>PuntoVenta</display-name>
    <description>Sistema de Punto de Venta - Gestión de Ventas, Compras e Inventario</description>
    
    <!-- Configuración de sesión -->
    <session-config>
        <session-timeout>1440</session-timeout> <!-- 24 horas en minutos -->
        <cookie-config>
            <http-only>true</http-only>
            <secure>false</secure> <!-- Cambiar a true en producción con HTTPS -->
        </cookie-config>
    </session-config>
    
    <!-- Página de bienvenida -->
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
        <welcome-file>login</welcome-file>
    </welcome-file-list>
    
    <!-- Configuración de errores -->
    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/views/error/404.jsp</location>
    </error-page>
    
    <error-page>
        <error-code>403</error-code>
        <location>/WEB-INF/views/error/403.jsp</location>
    </error-page>
    
    <error-page>
        <error-code>500</error-code>
        <location>/WEB-INF/views/error/500.jsp</location>
    </error-page>
    
    <!-- Filtro de autenticación -->
    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>com.puntoventa.filters.AuthenticationFilter</filter-class>
    </filter>
    
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/dashboard</url-pattern>
        <url-pattern>/productos</url-pattern>
        <url-pattern>/ventas</url-pattern>
        <url-pattern>/compras</url-pattern>
        <url-pattern>/clientes</url-pattern>
        <url-pattern>/proveedores</url-pattern>
        <url-pattern>/empleados</url-pattern>
        <url-pattern>/usuarios</url-pattern>
        <url-pattern>/marcas</url-pattern>
        <url-pattern>/puestos</url-pattern>
        <url-pattern>/reportes</url-pattern>
        <url-pattern>/configuracion</url-pattern>
    </filter-mapping>
    
    <!-- Filtro de codificación UTF-8 -->
    <filter>
        <filter-name>CharacterEncodingFilter</filter-name>
        <filter-class>com.puntoventa.filters.CharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    
    <filter-mapping>
        <filter-name>CharacterEncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    
    <!-- Filtro CORS para APIs -->
    <filter>
        <filter-name>CorsFilter</filter-name>
        <filter-class>com.puntoventa.filters.CorsFilter</filter-class>
    </filter>
    
    <filter-mapping>
        <filter-name>CorsFilter</filter-name>
        <url-pattern>/api/*</url-pattern>
    </filter-mapping>
    
    <!-- Servlets principales -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.puntoventa.servlets.LoginServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    
    <servlet>
        <servlet-name>DashboardServlet</servlet-name>
        <servlet-class>com.puntoventa.servlets.DashboardServlet</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>
    
    <servlet>
        <servlet-name>ProductoServlet</servlet-name>
        <servlet-class>com.puntoventa.servlets.ProductoServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>VentaServlet</servlet-name>
        <servlet-class>com.puntoventa.servlets.VentaServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>CompraServlet</servlet-name>
        <servlet-class>com.puntoventa.servlets.CompraServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>ClienteServlet</servlet-name>
        <servlet-class>com.puntoventa.servlets.ClienteServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>ProveedorServlet</servlet-name>
        <servlet-class>com.puntoventa.servlets.ProveedorServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>EmpleadoServlet</servlet-name>
        <servlet-class>com.puntoventa.servlets.EmpleadoServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>UsuarioServlet</servlet-name>
        <servlet-class>com.puntoventa.servlets.UsuarioServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>MarcaServlet</servlet-name>
        <servlet-class>com.puntoventa.servlets.MarcaServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>PuestoServlet</servlet-name>
        <servlet-class>com.puntoventa.servlets.PuestoServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>ReporteServlet</servlet-name>
        <servlet-class>com.puntoventa.servlets.ReporteServlet</servlet-class>
    </servlet>
    
    <!-- Mapeo de URLs -->
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>DashboardServlet</servlet-name>
        <url-pattern>/dashboard</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>DashboardServlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>DashboardServlet</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>ProductoServlet</servlet-name>
        <url-pattern>/productos</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>VentaServlet</servlet-name>
        <url-pattern>/ventas</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>CompraServlet</servlet-name>
        <url-pattern>/compras</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>ClienteServlet</servlet-name>
        <url-pattern>/clientes</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>ProveedorServlet</servlet-name>
        <url-pattern>/proveedores</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>EmpleadoServlet</servlet-name>
        <url-pattern>/empleados</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>UsuarioServlet</servlet-name>
        <url-pattern>/usuarios</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>MarcaServlet</servlet-name>
        <url-pattern>/marcas</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>PuestoServlet</servlet-name>
        <url-pattern>/puestos</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>ReporteServlet</servlet-name>
        <url-pattern>/reportes</url-pattern>
    </servlet-mapping>
    
    <!-- Configuración de recursos estáticos -->
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.css</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.js</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.png</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.jpg</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.jpeg</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.gif</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.ico</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.woff</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.woff2</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.ttf</url-pattern>
    </servlet-mapping>
    
    <!-- Configuración de MIME types -->
    <mime-mapping>
        <extension>css</extension>
        <mime-type>text/css</mime-type>
    </mime-mapping>
    
    <mime-mapping>
        <extension>js</extension>
        <mime-type>application/javascript</mime-type>
    </mime-mapping>
    
    <mime-mapping>
        <extension>json</extension>
        <mime-type>application/json</mime-type>
    </mime-mapping>
    
    <mime-mapping>
        <extension>woff</extension>
        <mime-type>font/woff</mime-type>
    </mime-mapping>
    
    <mime-mapping>
        <extension>woff2</extension>
        <mime-type>font/woff2</mime-type>
    </mime-mapping>
    
    <!-- Configuración de seguridad -->
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Protected Area</web-resource-name>
            <url-pattern>/WEB-INF/*</url-pattern>
        </web-resource-collection>
        <auth-constraint/>
    </security-constraint>
    
    <!-- Configuración de compresión -->
    <context-param>
        <param-name>compressableMimeType</param-name>
        <param-value>text/html,text/xml,text/plain,text/css,text/javascript,application/javascript,application/json</param-value>
    </context-param>
    
    <!-- Configuración de la aplicación -->
    <context-param>
        <param-name>app.name</param-name>
        <param-value>PuntoVenta</param-value>
    </context-param>
    
    <context-param>
        <param-name>app.version</param-name>
        <param-value>1.0.0</param-value>
    </context-param>
    
    <context-param>
        <param-name>app.environment</param-name>
        <param-value>development</param-value>
    </context-param>
    
</web-app>
