        <filter-name>JWTAuthFilter</filter-name>
        <filter-class>com.sistemaempresa.filters.JWTAuthFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>JWTAuthFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!-- P치gina de bienvenida -->
